# Required
NODE_ENV=development
PORT=4000
MONGODB_URI=mongodb://localhost:27017/van-management
JWT_SECRET=your-32-character-secret-key-here
JWT_REFRESH_SECRET=your-32-character-refresh-secret-here

# Optional
CORS_ORIGIN=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,https://yourapp.com
GOOGLE_CLIENT_ID=your-google-client-id
WEB_BASE_URL=http://localhost:3000

# Email (SES)
EMAIL_PROVIDER=ses
SES_SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SES_SMTP_PORT=587
SES_SMTP_USER=your-ses-smtp-user
SES_SMTP_PASS=your-ses-smtp-password
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME="Van Management"

# Scheduler
ENABLE_SCHEDULER=true
OVERDUE_CRON_INTERVAL_MS=900000
NOTIFY_THROTTLE_HOURS=24
NOTIFY_REMINDER_LEAD_HOURS=48
